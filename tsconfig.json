{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": [
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "packages"
  ],
  "references": [
    { "path": "./packages/common" },
    { "path": "./packages/yelp-fusionai-mcp" },
    { "path": "./packages/server-stochasticthinking" },
    { "path": "./packages/server-clear-thought" }
  ]
}